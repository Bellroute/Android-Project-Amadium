<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.SignUpActivity">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_name"
        android:background="#000000"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

    <ImageView
        android:id="@+id/image_user_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@id/background_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_oval"
        android:layout_marginTop="126dp"
        android:src="@drawable/ic_user" />

    <View
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_below="@+id/line"
        android:background="#007aff" />

    <TextView
        android:id="@+id/textView_profile_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_user_profile"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Sports"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView_profile_tier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_profile_sports"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Tier"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_profile_wintielose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_profile_tier"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="WinTieLose"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView_select_sports"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="대결 신청"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>